<!DOCTYPE html>
<html lang="en">
	<%- include('../partials/head') %>
	<body>
		<%- include('../partials/nav') %>
		<div class="container">
			<h1 class="text-center">All post</h1>
			<hr />
			<% for(let post of posts) {%>
			<div class="row">
				<div
					class="col d-flex flex-column bd-highlight mb-3 text-center border"
				>
					<h2 class="p-2 bd-highlight"><%=post.title%></h2>
					<p class="text-muted"><%=post.author%></p>
					<a href="/posts/<%= post._id%>">Details</a>
				</div>
			</div>

			<% } %>
		</div>
	</body>
</html>
